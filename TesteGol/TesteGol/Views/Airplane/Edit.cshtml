@model TesteGol.Models.Airplane

@{
    ViewBag.Title = "Edit";
}
<script>
    $(document).ready(function () {
        $('input[value="Save"]').click(function (e) {
            if ($('input[name="Code"]').val() == '' ||
                $('input[name="Code"]').val() == undefined ||
                $('input[name="Code"]').val() == null) {
                alert("codigo não pode ficar em branco");
                return false;
            }
            if ($('input[name="Model"]').val() == '' ||
                $('input[name="Model"]').val() == undefined ||
                $('input[name="Model"]').val() == null) {
                alert("modelo não pode ficar em branco");
                return false;
            }
            if ($('input[name="QtdPassengers"]').val() == '' ||
                $('input[name="QtdPassengers"]').val() == undefined ||
                $('input[name="QtdPassengers"]').val() == null) {
                alert("número de passageiros não pode ficar em branco");
                return false;
            }
            return true;
        });
    });
</script>
<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Airplane</legend>

